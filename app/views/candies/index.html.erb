<h2>
  Root candy
</h2>

<nav>
  <%= link_to 'adicione um novo doce', new_candy_path %>
</nav>

<% @candys.each do |candy| %>
  <div>
    <span>
      <%= candy.name %> |
    </span>
    <span>
      <%= candy.description %> |
    </span>
    <span>
      <%= candy.rate %> |
    </span>
    <%= link_to  "Edite o doce", edit_candy_path(candy) %> |
    <%= link_to  "Apagar doce", 
      candy_path(candy),
      data: {
        'turbo-method': :delete, 
        'turbo-confirm': 'Tem certeza que deseja deletar o doce?'
      } %>
  </div>
<% end %>